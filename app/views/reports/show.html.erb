<% content_for :header_title, "Detalhes do Relato" %>
<% content_for :header_desc, "Protocolo: #{@report.protocolo}" %>

<article class="card">
  <header class="card__header card__header--split">
    <h2 class="card__title">Informações do Relato</h2>
    <span class="badge badge--<%= @report.status %>"><%= @report.status.humanize %></span>
  </header>

  <section class="report-details">
    <table class="pdf-table-fixed">
      <tr>
        <td><label class="pdf-label">Categoria</label><div class="pdf-value"><%= @report.categoria %></div></td>
        <td><label class="pdf-label">Local</label><div class="pdf-value"><%= @report.local %></div></td>
      </tr>
      <tr>
        <td colspan="2"><label class="pdf-label">Descrição da Denúncia</label><div class="pdf-value"><%= @report.descricao %></div></td>
      </tr>
    </table>

    <div class="report-details__section-title">Observações de Apuração (RH)</div>
    <%= form_with model: @report, class: "no-print" do |f| %>
      <%= f.text_area :oc_txt, rows: 4, class: "form-input", placeholder: "Insira notas internas aqui..." %>
      <%= f.submit "Salvar Observações", class: "button button--primary", style: "margin-top: 10px" %>
    <% end %>
  </section>
</article>